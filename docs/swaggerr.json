                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "example": "john.doe@example.com"
                    },
                    "password": {
                        "type": "string",
                        "minLength": 8,
                        "example": "password1234"
                    }
                }
            },
            "CategoryRequest": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string",
