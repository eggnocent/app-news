                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "title": {
                        "type": "string",
                        "example": "Category 1"
                    },
                    "slug": {
                        "type": "string",
                        "example": "category-1"
                    },
                    "created_by_name": {
                        "type": "string",
                        "example": "John Doe"
                    }
                }
            },
            "ContentResponse": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "title": {
                        "type": "string",
                        "example": "Article Title"
                    },
                    "excerpt": {
                        "type": "string",
                        "example": "This is an excerpt."
                    },
                    "description": {
                        "type": "string",
                        "example": "Detailed description of the content."
                    },
                    "status": {
                        "type": "string",
                        "example": "PUBLISHED"
                    },
                    "image": {
                        "type": "string",
                        "example": "http://example.com/image.png"
                    },
                    "tags": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "example": ["data"]
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "category_name": {
                        "type": "string",
                        "example": "Technology"
                    },
                    "author": {
                        "type": "string",
                        "example": 1
                    },
                    "created_by_id": {
                        "type": "integer",
                        "example": 1
                    }
                }
            },
